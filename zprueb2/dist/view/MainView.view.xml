<mvc:View
    controllerName="zprueb2.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="page" title="Visor de Tablas de Diccionario">
        <content>
            <Table
                id="reporteTable"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{localModel>/items}"
                growing="true"
                growingThreshold="20"
                growingScrollToLoad="true"
                alternateRowColors="true">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Tablas del Diccionario de Datos" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField
                            id="searchField"
                            width="auto"
                            placeholder="Buscar por tabla, descripción..."
                            search=".onSearch"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column><Text text="Nombre de Tabla"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Descripción"/></Column>
                    <Column hAlign="Center"><Text text="Estado"/></Column>
                    <Column hAlign="Center" minScreenWidth="Desktop" demandPopin="true"><Text text="Idioma"/></Column>
                    <Column hAlign="End" minScreenWidth="Desktop" demandPopin="true"><Text text="Versión"/></Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle" type="Navigation">
                        <cells>
                            <ObjectIdentifier title="{localModel>TABNAME}"/>
                            
                            <Text text="{localModel>DDTEXT}"/>
                            
                            <ObjectStatus
                                text="{localModel>AS4LOCAL}"
                                state="{= ${localModel>AS4LOCAL} === 'A' ? 'Success' : 'None' }"/>
                            
                            <Text text="{localModel>DDLANGUAGE}"/>
                            
                            <ObjectNumber number="{localModel>AS4VERS}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>