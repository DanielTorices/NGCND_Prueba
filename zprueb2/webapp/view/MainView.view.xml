<mvc:View controllerName="zprueb2.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">

    <Page id="page" title="Reporte de Proveedores">
        <content>
            <Table
                id="reporteTable"
                headerText="Datos Cargados"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{localModel>/items}"
                growing="true"                  
                growingThreshold="100"          
                growingScrollToLoad="true">   

                <columns>
                    <Column><Label text="No_documento"/></Column>
                    <Column><Label text="Comprador"/></Column>
                    <Column><Label text="Fecha de CreaciÃ³n"/></Column>
                    <Column><Label text="Proveedor"/></Column>
                    <Column hAlign="End"><Label text="SubTotal"/></Column>
                    <Column><Label text="Moneda"/></Column>
                    <Column><Label text="IVA"/></Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                   
                        <cells>
                            <Text text="{localModel>No_documento}"/>
                            <Text text="{localModel>Buyer}"/>
                            <Text text="{localModel>CreationDate}"/>
                            <Text text="{localModel>Supplier}"/>
                            <Text text="{localModel>Subtotal}"/>
                            <Text text="{localModel>Currency}"/>
                            <Text text="{localModel>Iva}"/>
                        </cells>
                         <!--
                    
                        <cells>
                            <Text text="{localModel>MANDT}"/>
                            <Text text="{localModel>EBELN}"/>
                            <Text text="{localModel>BUKRS}"/>
                            <Text text="{localModel>BSTYP}"/>
                            <Text text="{localModel>BSART}"/>
                        </cells>
                       
                        <cells>
                            <Text text="{localModel>TABNAME}"/>
                            <Text text="{localModel>DDLANGUAGE}"/>
                            <Text text="{localModel>AS4LOCAL}"/>
                            <Text text="{localModel>AS4VERS}"/>
                            <Text text="{localModel>DDTEXT}"/>
                        </cells>
                         -->
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>